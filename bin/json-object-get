#!/usr/bin/env python

import sys
import argparse
from lib import jsonops

parser = argparse.ArgumentParser()
parser.add_argument("key", type=str,
                    help="key of object")
args = parser.parse_args()

input_data = sys.stdin.read()

try:
    json = jsonops.load_json(input_data)
except ValueError as e:
    print "Cannot parse json: " + str(e)
    sys.exit(1)

try:
    result = jsonops.object_get(json, args.key)
except Exception as e:
    # More sophisticated exception processing to be added
    print "Error: " + str(e)
    sys.exit(1)
else:
    print unicode(result).encode('utf8')
